API_PORT=8787
# Render/hosting puede inyectar PORT automáticamente.
# Si existe PORT, backend/src/server.js lo prioriza sobre API_PORT.
NODE_ENV=development
FRONTEND_ORIGIN=http://localhost:5173
# Ejemplo producción: https://artesaniasani.com,https://www.artesaniasani.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CAMBIAR_PASSWORD_SEGURA
# Si tu contraseña incluye #, espacios u otros caracteres especiales, envuélvela en comillas:
# ADMIN_PASSWORD="MiPassword#Segura2026!"
JWT_SECRET=CAMBIAR_POR_SECRETO_LARGO_Y_ALEATORIO

# PostgreSQL (Supabase/Render). En Render se recomienda definirla desde el panel.
DATABASE_URL=postgresql://postgres:password@host:5432/postgres

JWT_EXPIRES_IN=8h
# Para frontend+API en dominios distintos (ej. Static Site + API en Render): COOKIE_SAME_SITE=none y COOKIE_SECURE=true
# Para local (mismo host): COOKIE_SAME_SITE=lax y COOKIE_SECURE=false
COOKIE_SAME_SITE=lax
COOKIE_SECURE=false
AUTH_LOGIN_WINDOW_MINUTES=15
AUTH_LOGIN_MAX_ATTEMPTS=8
AUTH_LOCK_WINDOW_MINUTES=30
AUTH_LOCK_MAX_FAILURES=5
AUTH_LOCK_DURATION_MINUTES=30
PYTHON_BIN=python3
PRODUCT_IMAGES_DIR=public/images
# Si frontend y API están en dominios distintos,
# define la base pública de imágenes servidas por la API:
# PRODUCT_IMAGES_PUBLIC_BASE_URL=https://artesaniasani-api.onrender.com
IMAGE_MAX_SIZE=1024
IMAGE_QUALITY=82
IMAGE_SOFT_BLOCK_MB=5
IMAGE_UPLOAD_MAX_MB=12
